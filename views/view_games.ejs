<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Word Game</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin: 20px;
      background: linear-gradient(to bottom, #004c99, #66b3ff);
      color: white;
    }
    .container {
      max-width: 800px;
      margin: auto;
      padding: 20px;
      background: #00264d;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
    button {
      background-color: #0066cc;
      color: white;
      border: none;
      padding: 10px 20px;
      margin: 5px;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
    }
    button:hover {
      background-color: #004080;
    }
    .game-card {
      background: #004080;
      padding: 15px;
      margin: 10px;
      border-radius: 8px;
      color: white;
      text-align: left;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    }
    a {
      color: #ffcc00;
      text-decoration: none;
      font-weight: bold;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Create a New Word Game</h1>

    <button id="create-game">Create Random Game</button>

    <h2>Existing Games</h2>
    <div id="game-container">
      <% if (games && games.length > 0) { %>
        <% games.forEach(game => { %>
          <div class="game-card">
            <p><strong>Game Title:</strong> <%= game.title %></p>
            <p><strong>Game ID:</strong> <%= game.id %></p>
            <p><a href="/game?gameId=<%= game.id %>&playerName=<%= playerName %>">Go to Game</a></p>
          </div>
        <% }) %>
      <% } else { %>
        <p>No games available. Create one now!</p>
      <% } %>
    </div>

    <script>
document.getElementById('create-game').addEventListener('click', () => {
  const newGameId = crypto.randomUUID(); // Generate a unique game ID
  const url = `http://localhost:3000/create-random-game/${newGameId}`;

  // Extract 'playerName' from the query string
  const params = new URLSearchParams(window.location.search);
  const playerName = params.get('playerName') || 'Anonymous';

  fetch(url, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      displayName: playerName, // Send playerName as displayName
    }),
  })
  .then(response => response.json())
  .then(data => {
    const gameContainer = document.getElementById('game-container');
    const newGameHTML = `
      <div class="game-card">
        <p><strong>Game Title:</strong> ${data.gameTitle}</p>
        <p><strong>Game ID:</strong> ${data.gameId}</p>
        <p><a href="/game?gameId=${data.gameId}&playerName=${playerName}">Go to Game</a></p>
      </div>
    `;
    gameContainer.insertAdjacentHTML('beforeend', newGameHTML);
    console.log('New game created:', data);
  })
  .catch(error => console.error('Error creating game:', error));
});

    </script>
  </div>
</body>
</html>
